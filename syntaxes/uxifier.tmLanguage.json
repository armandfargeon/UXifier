{
  "name": "uxifier",
  "scopeName": "source.uxifier",
  "fileTypes": [
    ".alc"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.uxifier",
      "match": "\\b(app|classic|code|color|colors|columnchart|downloadeable|filters{|header|icon:|level|linechart|logo|menu|page|polarchart|position|px|theme|title|widgetWrapper|width:)\\b"
    },
    {
      "name": "keyword.symbol.uxifier",
      "match": "(\\.|\\{|\\}|\\filters{|\\icon:|\\width:)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.uxifier",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.uxifier"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.uxifier"
        }
      ]
    }
  }
}