{
  "name": "uxifier",
  "scopeName": "source.uxifier",
  "fileTypes": [
    ".alc"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.uxifier",
      "match": "\\b(app|classic|code|color|colors{|columnchart|downloadeable|filters:|header|hide|icon:|level|linechart|logo|menu|page|polarchart|popup|px|theme|title|widgetWrapper|width:|x:|y:)\\b"
    },
    {
      "name": "keyword.symbol.uxifier",
      "match": "(\\,|\\.|\\{|\\}|\\=>|\\colors{|\\filters:|\\icon:|\\width:|\\x:|\\y:)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.uxifier",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.uxifier"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.uxifier"
        }
      ]
    }
  }
}